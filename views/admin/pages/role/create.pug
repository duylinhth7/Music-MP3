extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới nhóm quyền

    form(
        action=`${prefixAdmin}/role/create`
        id="form-create-role"
        method='POST'

    )
        div(class="form-group")
            label(for="title") Tên nhóm quyền
            input(
                type="text"
                class="form-control mb-4"
                id="title"
                name="title"                
                required
            )
        div(class="form-group")
            label(for="description") Mô tả nhóm quyền
            textarea(
                type="text"
                class="form-control tiny-mce"
                id="description"
                name="description"
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới