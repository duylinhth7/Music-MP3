extends ../../layouts/default.pug
//- include ../../mixins/select-tree.pug

block main 
    h1(class="mb-4") Chỉnh sửa chủ đề

    form(
        action=`${prefixAdmin}/topics/edit/${topic.id}?_method=PATCH`
        id="form-edit-topic"
        method='POST'
        enctype="multipart/form-data"
    )
        div(class="form-group mb-4")
            label(for="title") Tên chủ đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=topic.title
                required
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="featured"
                name="featured"
                value="1"
                checked=topic.featured=="1"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Nổi bật
            
            
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="featured"
                name="featured"
                value="0"
                checked=topic.featured=="0"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Không nổi bật


        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                type="text"
                class="form-control tiny-mce"
                id="description"
                name="description"
            ) #{topic.description}


        div(class="form-group")
            label(for="avatar") Đường dẫn ảnh
            input(
                type="file"
                class="form-control"
                id="avatar"
                name="avatar"
                accept="avatar/*"
                inputImage
            )
            img(
                src=topic.avatar
                previewImage
                class="preview-image"
            )
            div(
                class="close-preview"
            ) x

        div(class="form-group")
            label(for="discountPercentage") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tăng dần"
                min=1
                value=topic.position
                requiered
            )  
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=topic.status==="active"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked=topic.status==="inactive"
            )
            label(
                for="statusActive"
                class="form-check-label"
            ) Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
            
            