extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container
        +box-head("Các chủ đề bài hát")
        .row
            each item in topics
                .col-4.mb-3
                    div(class="card")
                        img(src=item.avatar)
                        div(class="card-body")
                            h5(class="cart-title") #{item.title}
                            p(class="cart-text") !{item.description}
                            a(href=`/songs/${item.slug}` class="btn btn-success") Xem chi tiết
