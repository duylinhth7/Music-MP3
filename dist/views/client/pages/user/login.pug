extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block css 
  link(rel="stylesheet", href="/client/css/login.css")

block main
  .d-flex.justify-content-center.align-items-center.min-vh-100
    .card.shadow.p-4.rounded(style="max-width: 400px; width: 100%;")
      .text-center.mb-4
        h2 Login
        p.text-muted Nhập thông tin đăng nhập để tiếp tục

      form(action="/user/login" method="POST")
        .mb-3
          label.form-label(for="email") Email
          input#email.form-control(type="email" name="email" required placeholder="Nhập email của bạn...")

        .mb-3
          label.form-label(for="password") Mật khẩu
          input#password.form-control(type="password" name="password" required placeholder="Nhập mật khẩu của bạn...")

        .mb-3.text-end
          a(href="/user/password/forget" class="text-decoration-none") Quên mật khẩu?

        button.btn.btn-primary.w-100(type="submit") Đăng nhập
